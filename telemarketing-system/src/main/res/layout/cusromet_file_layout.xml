<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="10dp" />

    <com.jinggan.library.ui.widget.FormWriteTopTitleView
        android:id="@+id/File_FileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvItemName="文件名称" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/File_FileExtension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="文件类型"
        android:visibility="gone"/>

    <com.jinggan.library.ui.widget.FormWriteTopTitleView
        android:id="@+id/File_FileUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvItemName="文件路径"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="文件图片"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.jinggan.library.media.picture.attachment.ImageAttachmentView
        android:id="@+id/File_Attachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>