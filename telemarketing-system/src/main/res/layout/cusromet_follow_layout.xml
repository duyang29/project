<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="10dp" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/Follow_FollowType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="跟进方式" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/Follow_FollowDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="跟进时间" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/Follow_InterestedStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="意向状态" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/Follow_LoanType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="意向贷款类型" />

    <com.jinggan.library.ui.widget.FormWriteTopTitleView
        android:id="@+id/Follow_Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvInputType="number"
        app:wvItemName="意向贷款金额(万)" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/Follow_NextFollowType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="下次跟进方式" />

    <com.jinggan.library.ui.widget.FormSelectTopTitleView
        android:id="@+id/Follow_NextFollowDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:svItemName="下次跟进日期" />

    <com.jinggan.library.ui.widget.FormWriteTopTitleView
        android:id="@+id/Follow_NextFollowTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvItemName="下次跟进时间点" />

    <com.jinggan.library.ui.widget.FormWriteTopTitleView
        android:id="@+id/Follow_Remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvItemName="备注" />

    <com.jinggan.library.ui.widget.FormWriteTopTitleView
        android:id="@+id/Follow_FollowPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wvItemName="跟进人" />

    <RelativeLayout
        android:id="@+id/Follow_vodie_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="录音"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Follow_vodie_Button"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_button_selecte"
            android:text="播放"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_alignParentBottom="true" />


</LinearLayout>