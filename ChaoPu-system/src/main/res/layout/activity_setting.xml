<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:id="@+id/Setting_Modify_Heard_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/item_seletor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像修改"
                android:textColor="#666666"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_grad_24dp" />

            <ImageView
                android:id="@+id/Setting_UserHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/right"
                android:src="@mipmap/default_head_img" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/Setting_Modify_Phone_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号码"
                android:textColor="#666666"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/right_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_grad_24dp" />

            <TextView
                android:id="@+id/Setting_Phone_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/right_phone"
                android:textSize="14sp"
                android:textColor="#888888"/>
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/Setting_Modify_nick_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="潮铺昵称"
                android:textColor="#666666"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/right_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_grad_24dp" />

            <TextView
                android:id="@+id/Setting_Nick_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/right_nick"
                android:textSize="14sp"
                android:textColor="#888888"/>
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:id="@+id/Setting_Modify_pwd_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_seletor"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="修改登录密码"
                android:textColor="#666666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_grad_24dp" />

        </RelativeLayout>

        <View style="@style/line_horizontal" />
    </LinearLayout>

    <Button
        android:id="@+id/Setting_Switch_Account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/wayto_button_red_selector"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>